<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" /> <!-- Set the inner color -->
            <corners android:radius="0sp" /> <!-- Set the corner radius -->
        </shape>
    </item>
    <!-- Border -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set the border color to primary color -->
            <corners android:radius="8dp" /> <!-- Set the same corner radius as the inner shape -->
        </shape>
    </item>
</layer-list>
